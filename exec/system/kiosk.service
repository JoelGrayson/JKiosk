[Unit]
Description=Chromium Kiosk
Wants=graphical.target
After=graphical.target

[Service]
Environment=DISPLAY=:0.0
Environment=XAUTHORITY=/home/USERNAME_INSERTED_HERE_BY_INSTALL_SH/.Xauthority
Type=forking
# Below is the path of the kiosk.sh file
ExecStart=/bin/bash ~/JKiosk/exec/system/kiosk.sh
Restart=on-abort
User=pi
Group=pi

[Install]
WantedBy=graphical.target
