[Unit]
Description=Buseroo Kiosk
Wants=graphical.target
After=graphical.target

[Service]
Environment=DISPLAY=:0.0
Environment=XAUTHORITY=HOME_INSERTED_HERE_BY_INSTALL_SH/.Xauthority
Type=forking
# Below is the path of the kiosk.sh file
ExecStart=/bin/bash BASE_INSERTED_HERE_BY_INSTALL_SH/exec/system/kiosk.sh
Restart=on-abort
User=USERNAME_INSERTED_HERE_BY_INSTALL_SH
Group=GROUP_INSERTED_HERE_BY_INSTALL_SH

[Install]
WantedBy=graphical.target
